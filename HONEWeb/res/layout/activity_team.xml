<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/team_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/team_grd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hone.honeweb.TeamActivity" >



    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" >

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/click_on" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/click_off" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/click_off" />
    </TableRow>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:text="AMS HONE team is a part of CIO Sales Support Tribe. We are categorized into Business Applications (including Publications) and Infrastructure Applications.Do you have new requests or changes for our applications? Then please contact:"
        android:textColor="@color/text_color_btn"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableRow1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="30dp"
        android:text="Netherlands HONELINK Mailbox/Netherlands/IBM"
        android:textColor="@color/text_color_btn"
        android:textSize="20sp" />

</RelativeLayout>